<h1>Sign In</h1>

<form action="<%= session_url %>" method="POST" class="user-form">

	<input type="hidden"
			name="authenticity_token"
			value="<%= form_authenticity_token %>">	

	<label for="user_username">Username</label>	
	<input type="text" name="user[username]" id="user_username" class="txti"><br>
	
	<label for="user_password">Password</label>	
	<input type="password" name="user[password]" id="user_password" class="txti"><br>
<br>
	<input type="submit" value="Sign In" class="btn-default">
</form>	
<br>
or
<br>
<h2><a href="<%= new_user_url%>">Sign Up!</a></h2>
