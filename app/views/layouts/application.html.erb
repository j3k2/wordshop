<!DOCTYPE html>
<html>
<head>
  <title>Wordshop</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
		<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Special+Elite&text=wordshop">
</head>
<body>
	
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  	<div class="container">
		<a href="/" class="navbar-brand">wordshop</a>
		<div class="btngrp" role="group">  			  
			
			<button type="button" class="btn btn-default">?</button>

		  <button type="button" class="btn btn-default">
				<a href="/#">Browse</a>
			</button>
		  <button type="button" class="btn btn-default">Add text</button>

				<% if current_user %>
						<%= button_to "Sign Out", session_url, method: :delete, class: 'btn btn-default' %>
			  	<button type="button" class="btn btn-default">
						<%= current_user.username %>
					</button>
				
					
				<% else %>
			  	<button type="button" class="btn btn-default">
						<a href="<%= new_session_url %>">
						Sign In
						</a>
					</button>
					
					
				<% end %>
	</div>
    </div>
  </nav>
	  <div class="container" style="padding-top:100px;">
			<ul>
			<% if flash[:errors] %>
				<% flash[:errors].each do |error| %>
					<li><%= error %>
				<% end %>
			<% end %>
			</ul>
	<%= yield %>
		</div>
		
		<script type="text/javascript">
		    window.currentUser = {
		        id : "<%= current_user.id %>"
		    }
		</script>

</body>
</html>
