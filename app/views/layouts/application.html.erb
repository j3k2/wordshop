<!DOCTYPE html>
<html>
<head>
  <title>Wordshop</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
		<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Special+Elite&text=wordshop">
</head>
<!-- <body style="background-image: url('http://i.imgur.com/dLi7qEL.jpg');"> -->
<body>
	
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  	<div class="container">
			<a href="/" class="navbar-brand">wordshop</a>
			<div class="btngrp" role="group">  			  
				
				<% if current_user %>
				
					<a href="/#" class="btn btn-default">Browse</a>
					<a href="/#texts/new" class="btn btn-default">Add text</a>
					<a class="btn btn-default" href="/#users/<%= current_user.id %>">
						<%= current_user.username %>
					</a>				
					<%= button_to "Sign Out", session_url, method: :delete, class: 'btn btn-default' %>
				<% else %>
					<a class="btn btn-default" href="<%= new_session_url %>">
						Sign In
					</a>								
				<% end %>
			</div>
    </div>
  	</nav>
	  <div class="container" style="padding-top:100px;">
			<ul>
			<% if flash[:errors] %>
				<% flash[:errors].each do |error| %>
				<div class="alert alert-danger" role="alert">
				
					<%= error %>
				</div>	
				<% end %>
			<% end %>
			</ul>
	<%= yield %>
		</div>
		
		<div id="footer"></div>
		<% if current_user %>
		<script type="text/javascript">
		    window.currentUser = {
		        id : "<%= current_user.id %>"
		    }
		</script>
		<% end %>		

</body>
</html>
