<!DOCTYPE html>
<html>
<head>
  <title>Wordshop</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
		<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Special+Elite&text=wordshop">
</head>
<body>
	
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  	<div class="container">
			<a href="/" class="navbar-brand">wordshop</a>
			<div class="btngrp" role="group">  			  
			
			  <button type="button" class="btn btn-default">
					<a href="/#">Browse</a>
				</button>
				
			  <button type="button" class="btn btn-default">
					<a href="/#texts/new">Add text</a>
				</button>
				
				<% if current_user %>
				
					  <button type="button" class="btn btn-default">
							<a href="/#users/<%= current_user.id %>">
								<%= current_user.username %>
							</a>	
						</button>
						
						<%= button_to "Sign Out", session_url, method: :delete, class: 'btn btn-default' %>

				<% else %>
				
			 	<button type="button" class="btn btn-default">
					<a href="<%= new_session_url %>">
						Sign In
					</a>
				</button>	
								
				<% end %>
			</div>
    </div>
  	</nav>
	  <div class="container" style="padding-top:100px;">
			<ul>
			<% if flash[:errors] %>
				<% flash[:errors].each do |error| %>
					<li><%= error %>
				<% end %>
			<% end %>
			</ul>
	<%= yield %>
		</div>
		
		<% if current_user %>
		<script type="text/javascript">
		    window.currentUser = {
		        id : "<%= current_user.id %>"
		    }
		</script>
		<% end %>		

</body>
</html>
