<h2><%= text.escape('title') %></h2>
by 
<a href="#/users/<%= text.user().id %>">
	<%= text.user().escape('username') %></a>
	<small><em>on <%= new Date(text.get('created_at')).getMonth() + 1 %>-<%= new Date(text.get('created_at')).getDate() %>-<%= new Date(text.get('created_at')).getFullYear() %></em></small>
	
<% if(window.currentUser.id == text.user().id){ %>
	<button id="text-delete" class="btn-default">Delete</button>
<% } %>	
<pre id="text-content"><%= text.annotatedContent() %></pre>

<div id="text-comments"></div>
<div id="text-new"></div>
<button id="comment-button" class="btn-default">Comment</button>

