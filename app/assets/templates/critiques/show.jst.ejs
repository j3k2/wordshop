<h4 class="hilite"><%= text.get('content').slice(
			critique.get('start_idx'),
			critique.get('end_idx') + 1
) %></h4>

<div id='crit-content'>
<%= critique.escape('content') %>
</div>

<% if(critique.user().id == window.currentUser.id){%>
	<button id="crit-delete">Delete</button>
<% } %>
<br>
<em class="byline"> - <a href="#users/<%= critique.user().id %>">
	<%= critique.user().escape('username') %></a> - </em>