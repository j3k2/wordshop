<h2><%= user.escape('username') %></h2>

<br>
Texts Written:<br>
<% user.texts().forEach(function(text){ %>
	<a href="#texts/<%= text.id %>"><%= text.escape('title') %></a><br>
<% })%>

<br>
Critiqued texts:<br>
<% user.critiquedTexts().models.forEach(function(text){ %>
	<a href="#texts/<%= text.id %>"><%= text.escape('title') %></a><br>
<% })%>
